{% block avis %}
    <section id="avis" class="container-fluid">
        <div class="container px-4 py-4 bg-opacity-50 rounded" id="hanging-icons">
            <h2 class="pb-2 border-bottom">Les avis de nos clients</h2>
        </div>
        <div class="container">
            <div class="carousel mt-5">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% if listeAvisValides is not empty %}
                            {% for avis in listeAvisValides %}
                                <div class="carousel-item text-center {% if loop.first %}active{% endif %}">
                                    <h3>{{ avis.nom }} {{ avis.prenom }}</h3>
                                    <p>{{ avis.commentaire }}</p>
                                    <div class="rating">
                                        {% for i in 1..5 %}
                                            {% if i <= avis.note %}
                                                <i class="fas fa-star"></i>
                                            {% else %}
                                                <i class="far fa-star"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="carousel-item text-center active">
                                <p>Pas d'avis trouvé.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="{{ path('app_avis') }}" class="btn btn-danger mb-5">Donnez votre avis</a>
            </div>
        </div>
    </section>
{% endblock %}



