{% extends 'base.html.twig' %}

{% block title %}Formulaire d'avis{% endblock %}

{% block body %}
{% include 'home/_navbar.html.twig' %}

    <div class="container px-4 py-4 bg-opacity-50 rounded mt-2" id="hanging-icons">
        <h2 class="pb-2 border-bottom">Formulaire d'avis</h2>
    </div>

    <section id="formulaire" class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-3">
                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.nom|e) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.prenom)|e }}
                    {{ form_widget(form.prenom) }}
                    {{ form_errors(form.prenom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.commentaire|e) }}
                    {{ form_widget(form.commentaire) }}
                    {{ form_errors(form.commentaire) }}
                </div>

                 <div class="mb-3">
                    {{ form_label(form.note|e) }}
                    {{ form_widget(form.note) }}
                    {{ form_errors(form.note) }}
                </div>

                <div class="text-center mb-3">
                    {{ form_row(form._token) }}
                    <button type="submit" class="btn btn-primary" id="submitBtn">Envoyer</button>
                </div>

                {{ form_end(form) }}
                  <script>
                    document.getElementById('submitBtn').addEventListener('click', function() {
                        // Affiche le message après la soumission du formulaire
                        alert('Nous avons bien reçu votre commentaire. Nous vous en remercions.');
                    });
                </script>
            </div>
        </div>
        <div class="col-auto d-flex justify-content-center align-items-center">
				<p class="mt-3 text-muted">© 2023-2024</p>
			</div>
    </section>
{% endblock %}
